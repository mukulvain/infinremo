{
    "content_scripts":[
        {
            "matches":["*://*.youtube.com/*" ],
            "run_at":"document_end",
            "js":["content.js"]
		
        }
    ],
    "name" : "Infinity Remote" ,
    "permissions": ["tabs"],
    "manifest_version": 2 ,
    "icons": { "16": "icon.png",
        "48": "icon.png",
       "128": "icon.png" },
    "version" : "1.0", 
    "description" : "Connect to Youtube",
    "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "mainpage.html",
    "default_title": "Access the Remote"
    }
  
}


